<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="79dp" android:id="@+id/layout_c">


    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:id="@+id/card_place_basic">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="4dp"
                    android:layout_marginStart="12dp" android:id="@+id/details_name"
                    tools:text="Place Name"
                    android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                    android:id="@+id/place_description"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="12dp" tools:text="Place Description"
                    android:textAlignment="textStart" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/details_name"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="10sp"
                    android:layout_height="10sp" tools:layout_editor_absoluteY="4dp"
                    tools:layout_editor_absoluteX="327dp" android:id="@+id/place_id" android:visibility="invisible"
                    android:textAlignment="center"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>