<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" android:id="@+id/layout_c">


    <android.support.v7.widget.CardView
            android:layout_width="368dp"
            android:layout_height="59dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <TextView
                    android:text="TextView"
                    android:layout_width="304dp"
                    android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="4dp"
                    android:layout_marginStart="12dp" android:id="@+id/place_name"
                    tools:text="Place Name"
                    app:layout_constraintEnd_toStartOf="@+id/call_button" android:layout_marginEnd="8dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="302dp"
                    android:layout_height="26dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                    android:id="@+id/place_description"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="12dp" tools:text="Place Description"
                    app:layout_constraintEnd_toStartOf="@+id/call_button" android:layout_marginEnd="8dp"/>
            <ImageButton
                    android:layout_width="33dp"
                    android:layout_height="47dp" app:srcCompat="@android:drawable/ic_menu_call"
                    android:id="@+id/call_button"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>